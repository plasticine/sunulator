<div class="w-full max-w-s">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_for @changeset, @action, fn f -> %>
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
      <% end %>

      <%= label f, :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= text_input f, :name, class: "shadow-inner appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none" %>
      <%= error_tag f, :name %>

      <div>
        <%= submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
